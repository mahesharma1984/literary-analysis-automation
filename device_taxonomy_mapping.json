      },
      {
        "device_name": "Scene",
        "classification": "N|Re|T",
        "rationale": "Fundamental pacing device showing moments in real-time detail",
        "student_facing_type": "Pacing Device"
      },
      {
        "device_name": "Direct Dialogue",
        "classification": "N|Re|T",
