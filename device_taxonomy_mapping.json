  "categorization_rules": {
    "priority_order": [
      "Check explicit mapping first",
      "If not found, use layer-function heuristics",
      "Default to week_2 for figurative language",
      "Default to week_3 for structural keywords",
      "Default to week_4 for voice/perspective keywords",
      "Default to week_5 for irony/rhetorical keywords"
    ],
    "fallback_heuristics": {
      "week_1": {
        "layer_patterns": ["N"],
        "function_patterns": ["Re"],
        "engagement_patterns": ["T"],
        "keyword_patterns": ["character", "dialogue", "scene", "exposition"]
      },
      "week_2": {
        "layer_patterns": ["B"],
        "function_patterns": ["Me"],
        "engagement_patterns": ["V"],
        "keyword_patterns": ["metaphor", "simile", "imagery", "symbol", "personification", "alliteration", "figurative"]
      },
      "week_3": {
        "layer_patterns": ["N", "B"],
        "function_patterns": ["Re", "Te"],
        "engagement_patterns": ["T", "V"],
        "keyword_patterns": ["structure", "foreshadow", "climax", "motif", "flashback", "conflict", "resolution", "pacing"]
      },
      "week_4": {
        "layer_patterns": ["N"],
        "function_patterns": ["Me", "Re"],
        "engagement_patterns": ["T"],
        "keyword_patterns": ["person", "narrator", "perspective", "voice", "monologue", "consciousness", "pov"]
      },
      "week_5": {
        "layer_patterns": ["R", "B"],
        "function_patterns": ["Te", "Re"],
        "engagement_patterns": ["V"],
        "keyword_patterns": ["irony", "euphemism", "understatement", "juxtaposition", "rhetorical", "tone", "diction", "sarcasm"]
