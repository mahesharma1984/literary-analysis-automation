{
  "version": "1.0",
  "description": "Device categorization mapping for Stage 1A pedagogical progression",
  "taxonomy_basis": "Artifact 1 - Device Taxonomy by Alignment Function",
  "pedagogical_framework": "5-week progressive difficulty model",
  
  "week_definitions": {
    "week_1_exposition": {
      "label": "Week 1: Exposition Elements",
      "macro_element": "Narrative Foundation",
      "focus": "Transparent narrative devices that establish story world, characters, and basic information",
      "characteristics": "Primarily N|Re|T - Narrative layer, Reinforcing function, Transparent engagement"
    },
    "week_2_literary_devices": {
      "label": "Week 2: Literary Devices",
      "macro_element": "Figurative Language & Foundations",
      "focus": "Foundational figurative language and descriptive devices students should recognize",
      "characteristics": "Primarily B|Me|V - Bridge layer, Mediating function, Visible engagement"
    },
    "week_3_structure": {
      "label": "Week 3: Structural Devices",
      "macro_element": "Dramatic Progression",
      "focus": "Devices that organize plot architecture and create dramatic arc",
      "characteristics": "Mixed classifications - devices that shape story structure and pacing"
    },
    "week_4_narrative_voice": {
      "label": "Week 4: Narrative Voice",
      "macro_element": "Perspective & Consciousness",
      "focus": "Devices that control point of view, focalization, and character consciousness",
      "characteristics": "Primarily N|Me|T or N|Re|T - Narrative layer voice devices"
    },
    "week_5_rhetorical_voice": {
      "label": "Week 5: Rhetorical Voice",
      "macro_element": "Persuasion & Meaning",
      "focus": "Devices that shape interpretation, create irony, and control reader understanding",
      "characteristics": "Primarily R or B with Te function - Rhetorical layer or tensioning devices"
    }
  },
  
  "device_mappings": {
    "week_1_exposition": [
      {
        "device_name": "Direct Characterization",
